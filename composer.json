{
    "name": "basic-app/basic-app",
    "license": "MIT",
    "minimum-stability": "dev",
    "prefer-stable": true,
    "require": {
        "codeigniter4/framework": "*",
        "codeigniter4/translations": "*",
        "michelf/php-markdown": "^1.8",
        "basic-app/system" : "dev-master",
        "basic-app/module-site" : "dev-master",
        "basic-app/admin" : "dev-master",
        "basic-app/module-blog" : "dev-master",
        "phptheme/core": "dev-master",
        "basic-app/theme-clean-blog": "dev-master",
        "npm-asset/startbootstrap-clean-blog": "dev-master",
        "bower-asset/tinymce": "dev-master",
        "bower-asset/codemirror": "dev-master",
        "basic-app/theme-cool-admin": "dev-master",
        "puikinsh/cool-admin": "*" 
    },
    "scripts": {
        "post-create-project-cmd": [
            "PhpTheme\\Core\\Composer::postCreateProject"
        ],
        "post-update-cmd": [
            "@composer dump-autoload",
            "PhpTheme\\Core\\Composer::postUpdate"
        ]        
    },
    "extra": {
        "PhpTheme\\Core\\Composer::postCreateProject": {
            "copyFiles": [
                {
                    "environment/.env": ".env"
                }
            ],
            "setPermission": [
                {
                    "writable/cache": "0777",
                    "writable/debugbar": "0777",
                    "writable/logs": "0777",
                    "writable/session": "0777",
                    "writable/uploads": "0777"
                }
            ]            
        },
        "PhpTheme\\Core\\Composer::postUpdate": {
            "copyFiles": [
                {
                    "vendor/npm-asset/startbootstrap-clean-blog": "public/themes/startbootstrap-clean-blog",
                    "vendor/puikinsh/cool-admin": "public/themes/colorlib-cool-admin",
                    "vendor/bower-asset/tinymce": "public/components/tinymce",
                    "vendor/bower-asset/codemirror": "public/components/codemirror"
                }
            ]
        }
    },
    "repositories": [
        {
            "type": "composer",
            "url": "https://asset-packagist.org"
        },
        {
            "type": "package",
            "package": {
                "name": "puikinsh/cool-admin",
                "version": "1.0",
                "source": {
                    "url": "https://github.com/puikinsh/CoolAdmin",
                    "type": "git",
                    "reference": "master"
                }
            }
        }        
    ]    
}
